<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/coop_employer"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coop_student"
        android:layout_alignStart="@+id/coop_id"
        android:layout_alignLeft="@+id/coop_id"
        android:layout_alignEnd="@+id/end_date"
        android:layout_alignRight="@+id/end_date"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Employer: Employer Name" />

    <TextView
        android:id="@+id/coop_student"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_date"
        android:layout_alignStart="@+id/coop_id"
        android:layout_alignLeft="@+id/coop_id"
        android:layout_alignEnd="@+id/end_date"
        android:layout_alignRight="@+id/end_date"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Student: Student Name" />

    <TextView
        android:id="@+id/coop_id"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Coop ID"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/coop_semester"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coop_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/coop_id"
        android:layout_toRightOf="@+id/coop_id"
        android:gravity="right"
        android:text="Semester" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coop_semester"
        android:layout_alignStart="@+id/coop_id"
        android:layout_alignLeft="@+id/coop_id"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Start date: yyyy-mm-dd" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/start_date"
        android:layout_alignEnd="@+id/coop_semester"
        android:layout_alignRight="@+id/coop_semester"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/start_date"
        android:layout_toRightOf="@+id/start_date"
        android:gravity="right"
        android:text="End date: yyyy-mm-dd" />

    <TextView
        android:id="@+id/job_description"
        android:layout_width="379dp"
        android:layout_height="40dp"
        android:layout_below="@+id/coop_employer"
        android:layout_alignStart="@+id/start_date"
        android:layout_alignLeft="@+id/start_date"
        android:layout_alignEnd="@+id/coop_employer"
        android:layout_alignRight="@+id/coop_employer"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="16dp"
        android:text="Position Title at Company, Location" />

</RelativeLayout>