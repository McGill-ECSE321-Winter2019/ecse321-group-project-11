<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/company_and_location"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employer_name"
        android:layout_alignStart="@+id/employer_name"
        android:layout_alignLeft="@+id/employer_name"
        android:layout_alignEnd="@+id/employer_position"
        android:layout_alignRight="@+id/employer_position"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Company and Location" />

    <TextView
        android:id="@+id/employer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Employer Name"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/employer_position"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/employer_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:text="Position" />

    <TextView
        android:id="@+id/employer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_and_location"
        android:layout_alignStart="@+id/company_and_location"
        android:layout_alignLeft="@+id/company_and_location"
        android:layout_alignEnd="@+id/company_and_location"
        android:layout_alignRight="@+id/company_and_location"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="email@mail.mcgill.ca" />

    <TextView
        android:id="@+id/employer_phone"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employer_email"
        android:layout_alignStart="@+id/employer_email"
        android:layout_alignLeft="@+id/employer_email"
        android:layout_alignEnd="@+id/employer_email"
        android:layout_alignRight="@+id/employer_email"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="22dp"
        android:text="514-XXX-XXXX" />

</RelativeLayout>